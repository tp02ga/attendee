# Django Settings
DJANGO_SECRET_KEY=
CREDENTIALS_ENCRYPTION_KEY=

# Database
DATABASE_URL=postgres://user:password@localhost:5432/attendee

# Redis
REDIS_URL=redis://localhost:6379

# AWS S3 Storage
AWS_RECORDING_STORAGE_BUCKET_NAME=
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1

# ASR Provider Selection
ASR_PROVIDER=assemblyai   # options: assemblyai | deepgram

# AssemblyAI Configuration
ASSEMBLYAI_API_KEY=
ASSEMBLYAI_REALTIME_URL=wss://api.assemblyai.com/v2/realtime/ws?sample_rate=16000

# Deepgram Configuration (if using Deepgram)
# Configure via Credentials in the web UI

# API Authentication
# The Attendee API uses Token authentication with API keys stored in the database
# Create API keys through the Django admin interface or management commands

# Optional Settings
DISABLE_SIGNUP=false
CONCURRENT_BOTS_LIMIT=2500
PROJECT_POST_THROTTLE_RATE=3000/min
CHARGE_CREDITS_FOR_BOTS=false
USE_IRSA_FOR_S3_STORAGE=false